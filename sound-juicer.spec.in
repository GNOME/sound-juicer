Name:		sound-juicer
Summary:	Clean and lean CD ripper
Version:	@VERSION@
Release:	1
License:	GPL
Group:		Applications/Multimedia
Source:		%{name}-%{version}.tar.gz
BuildRoot:	%{_tmppath}/%{name}-%{version}-root
Requires:	libmusicbrainz >= 2.0.1
Requires:	libgnomeui >= 2.0.0
Requires:	glib2 >= 2.0.0
Requires:	gstreamer >= 0.6.1
Requires:	GConf2 >= 2.0.0
Requires:	gstreamer-cdparanoia >= 0.6.1
Requires:	gstreamer-vorbis >= 0.6.1
BuildRequires:	libmusicbrainz-devel >= 2.0.1
BuildRequires:	libgnomeui-devel >= 2.0.0
BuildRequires:	glib2-devel >= 2.0.0
BuildRequires:	gstreamer-devel >= 0.6.1
BuildRequires:	GConf2-devel >= 2.0.0

%description
GStreamer-based CD ripping tool. Saves audio CDs to Ogg/vorbis.

%prep
%setup -q

%build

./configure --prefix=%{_prefix} --sysconfdir=%{_sysconfdir}

make

%install
[ -n "$RPM_BUILD_ROOT" -a "$RPM_BUILD_ROOT" != / ] && rm -rf $RPM_BUILD_ROOT

export GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL=1;
%makeinstall
unset GCONF_DISABLE_MAKEFILE_SCHEMA_INSTALL

#%find_lang sound-juicer

%clean
[ -n "$RPM_BUILD_ROOT" -a "$RPM_BUILD_ROOT" != / ] && rm -rf $RPM_BUILD_ROOT

%post -p /sbin/ldconfig
export GCONF_CONFIG_SOURCE=`gconftool-2 --get-default-source` gconftool-2 --makefile-install-rule %{_sysconfdir}/gconf/schemas/sound-juicer.schemas > /dev/null;

%postun -p /sbin/ldconfig

#%files -f sound-juicer.lang
%files
%defattr(-, root, root)
%doc AUTHORS COPYING ChangeLog INSTALL README NEWS
%{_bindir}/sound-juicer
%{_sysconfdir}/gconf/schemas/sound-juicer.schemas
%{_datadir}/sound-juicer/sound-juicer.glade
%{_datadir}/sound-juicer/orange-slice.png
%{_datadir}/applications/sound-juicer.desktop
%{_datadir}/pixmaps/sound-juicer.png
%{_datadir}/locale/*/LC_MESSAGES/*

